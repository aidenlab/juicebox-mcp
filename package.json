    "igv": "^2.15.5",
    "igv-ui": "github:igvteam/igv-ui#v1.5.0",
    "igv-utils": "github:igvteam/igv-utils#v1.4.5",
    "sass": "^1.95.0",
    "vite": "^7.2.7",
    "vite-plugin-static-copy": "^3.1.4",
    "vitest": "^4.0.15",
    "w3c-xmlhttprequest": "^3.0.4"
  }
